<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.talyeh3.myapplication.ToBe">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#333333"
            android:gravity="center"
            android:padding="20dp"
            android:text="Manage Posts"
            android:textColor="#ffffff"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#69a5f2"
            android:gravity="center"
            android:text="Log Out"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btnAddPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#69a5f2"
            android:gravity="center"
            android:text="Add Post"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btnAllPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#69a5f2"
            android:gravity="center"
            android:text="All Post"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btnOpenTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#69a5f2"
            android:gravity="center"
            android:text="Open Team"
            android:textSize="30sp" />
        <Button
            android:id="@+id/btnMyTeams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#69a5f2"
            android:gravity="center"
            android:text="My Teams"
            android:textSize="30sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
